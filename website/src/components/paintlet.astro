---
const { paintlet } = Astro.props;
const isProd = import.meta.env.PROD;
---

{
  isProd ? (
    <script type="module" define:vars={{ paintletUrl }}>
      const paintletUrl = `https://unpkg.com/@londoncss/paintlet-${paintlet}`;
      CSS.paintWorklet.addModule(paintletUrl);
    </script>
  ) : (
    <script define:vars={{ paintletUrl }}>
      CSS.paintWorklet.addModule(paintletUrl);
    </script>
  )
}
