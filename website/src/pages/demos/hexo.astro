---
import paintletUrl from "paintlets/src/hexo/?url";

import Demo from "../../layouts/demo.astro";
---

<Demo title="Hexo" paintletUrl={paintletUrl}>
  <li class="sample sample--1"><a href="#sample-1">Sample 1</a></li>
  <li class="sample sample--2"><a href="#sample-2">Sample 2</a></li>
  <li class="sample sample--3"><a href="#sample-3">Sample 3</a></li>
  <li class="sample sample--4"><a href="#sample-4">Sample 4</a></li>
  <li class="sample sample--5"><a href="#sample-5">Sample 5</a></li>
  <li class="sample sample--6"><a href="#sample-6">Sample 6</a></li>
</Demo>

<style>
  .sample {
    --bg: #000;
    --bg-image: paint(hexo);
    --scale: 0.002;
  }

  .sample--1 {
    --bg: hsl(0, 0%, 10%);
    --fill: hsl(0, 0%, 50%, 0.5);
  }

  .sample--2 {
    --style: hue;
    --radius: 9;
    --fill: hsla(180, 100%, 20%, 0.5);
    --bg: deeppink;
  }

  .sample--3 {
    --gap: 0.2;
    --fill: hsl(60, 100%, 70%);
    --bg: rebeccapurple;
  }

  .sample--4 {
    --radius: 30;
    --gap: 6;
    --stroke-width: 3;
    --stroke-colour: lemonchiffon;
    --bg: palevioletred;
    --bg-image: paint(hexo),
      linear-gradient(to top, var(--bg), var(--stroke-colour) 75%);
  }

  .sample--5 {
    --radius: 48;
    --gap: -36;
    --stroke-width: 2;
    --stroke-colour: #333;
    --bg: black;
  }

  .sample--6 {
    --style: rainbow;
    --radius: 20;
    --gap: 10;
    --bg: black;
    --cube-tints: #0003 #0006;
  }

  .sample__demo {
    --scale: 0.001;
  }
</style>
