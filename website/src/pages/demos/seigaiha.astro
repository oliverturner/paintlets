---
import paintletUrl from "paintlets/src/seigaiha/?url";

import Demo from "../../layouts/demo.astro";
---

<Demo title="Seigaiha" paintletUrl={paintletUrl}>
  <li class="sample sample--1"><a href="#sample-1">Sample 1</a></li>
  <li class="sample sample--2"><a href="#sample-2">Sample 2</a></li>
  <li class="sample sample--3"><a href="#sample-3">Sample 3</a></li>
  <li class="sample sample--4"><a href="#sample-4">Sample 4</a></li>
</Demo>

<style>
  .samples {
    --wh: 360px;
    --radius: 55;
  }

  .sample {
    --bg-image: paint(seigaiha);
  }

  .sample--1 {
    --radius: 55;
  }

  .sample--2 {
    --rings: 4;
    --stroke-width: 8;
    --stroke-colour: #222;
    --bg: #111;
  }

  .sample--3 {
    --rings: 8;
    --radius: 70;
    --bg: hsl(200deg, 50%, 30%);
    --stroke-width: 2;
    --stroke-colour: hsl(200deg, 50%, 40%);
  }

  .sample__demo.sample--1 {
    --river: hsl(200deg, 60%, 20%);
  }

  .sample__demo.sample--2 {
    --river: hsl(200deg, 60%, 45%);
  }

  .sample__demo.sample--3 {
    --river: hsl(200deg, 70%, 20%);
  }
</style>
